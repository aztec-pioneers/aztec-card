{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "//#install-deps": {
      "cache": false
    },
    "bootstrap": {
      "dependsOn": ["//#install-deps", "^compile", "compile"]
    },
    "compile:noir": {
      "dependsOn": ["^compile:noir"],
      "inputs": [
        "**/*.nr",
        "**/Nargo.toml",
        "!package.json",
        "**/*.sh",
        "**/scripts/**"
      ],
      "outputs": ["**/target/**", "!**/target/cache/**", "**/artifacts/**"],
      "outputLogs": "new-only"
    },
    "compile": {
      "dependsOn": ["^compile:noir", "compile:noir"]
    },
    "build": {
      "dependsOn": ["^bootstrap", "bootstrap"],
      "cache": false
    },
    "start": {
      "dependsOn": ["^bootstrap", "bootstrap"],
      "cache": false,
      "persistent": true
    },
    "dev": {
      "dependsOn": ["^bootstrap", "bootstrap"],
      "cache": false,
      "persistent": true
    },
    "test:lint": {
      "dependsOn": ["^bootstrap", "bootstrap"],
      "outputLogs": "new-only"
    },
    "test:lint:fix": {
      "dependsOn": ["^bootstrap", "bootstrap"],
      "cache": false
    },
    "test:runtime": {
      "dependsOn": ["^bootstrap", "bootstrap"],
      "outputLogs": "new-only"
    },
    "test": {
      "dependsOn": ["test:lint", "test:runtime"],
      "outputLogs": "new-only"
    }
  }
}
