  },
  "dependencies": {
    "@aztec/aztec.js": "catalog:",
    "@aztec/stdlib": "catalog:"
  },
  "devDependencies": {
    "@repo/scripts": "workspace:*",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
